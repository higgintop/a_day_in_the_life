%h1 Entries for #{@journal.title}!
=button_to "Create New Entry", new_journal_entry_path(@journal),method: :get

-# Test section
%div.entries-container
  -div_num = 0
  -@entries.each do |entry|
    %div{class: "entry-#{div_num}"}
      - background_image = entry ? entry.image_url.to_s : ""
      %div.image-container{:style => "background-image: url('#{background_image}')"}
      %h2.title #{entry.title}
    %div{class: "entry-#{div_num}-hover"}
      =link_to "View", journal_entry_path(@journal, entry), method: :get
      - div_num += 1


=paginate @entries


